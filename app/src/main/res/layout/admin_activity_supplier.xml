<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="152dp"
                android:layout_gravity="center"
                android:orientation="vertical">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="199dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/etNamaSupplier"
                    android:layout_toStartOf="@+id/etNamaSupplier"
                    android:text="Nama"
                    android:textSize="19dp" />


                <EditText
                    android:id="@+id/etNamaSupplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:hint="Nama Supplier"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etAlamatSupplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/etNamaSupplier"
                    android:ems="10"
                    android:hint="Alamat"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etNotelpSupplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/etAlamatSupplier"
                    android:ems="10"
                    android:hint="Nomor Telepon"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/etNotelpSupplier"
                    android:layout_toStartOf="@+id/etNamaSupplier"
                    android:text="Telepon:"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/etAlamatSupplier"
                    android:layout_toStartOf="@+id/etKode"
                    android:text="Alamat:"
                    android:textSize="19dp" />


            </RelativeLayout>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Create"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnUpdateSupplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Edit"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>