<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="375dp"
                android:layout_height="177dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/transaction_background">


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="101dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:text="Pelanggan:"
                    android:textSize="19dp" />

                <Spinner
                    android:id="@+id/spinnerCustomer"
                    android:layout_width="214dp"
                    android:layout_height="37dp"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_below="@+id/textView10"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_marginBottom="62dp"
                    android:text="Customer Service On Duty:"
                    android:textSize="19dp" />

                <Spinner
                    android:id="@+id/spinnerCS"
                    android:layout_width="214dp"
                    android:layout_height="37dp"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_below="@+id/textView20"
                    android:layout_marginTop="-62dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnDaftarCustomer"
                    android:layout_width="103dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/textView10"
                    android:text="Daftar"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="375dp"
                android:layout_height="294dp"
                android:layout_gravity="center"
                android:background="@drawable/transaction_background"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/txtViewSparepart"
                    android:layout_width="101dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/txtJlhSparepart"
                    android:text="Sparepart:"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/txtViewSparepart7"
                    android:layout_width="101dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/txtViewSparepart"
                    android:layout_marginTop="80dp"
                    android:text="Harga Satuan:"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/txtViewSparepart2"
                    android:layout_width="101dp"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/txtViewSparepart"
                    android:layout_marginBottom="89dp"
                    android:text="Jumlah:"
                    android:textSize="19dp" />

                <Spinner
                    android:id="@+id/spinnerSparepart"
                    android:layout_width="214dp"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtViewSparepart"
                    android:layout_marginStart="64dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/txtJlhSparepart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/spinnerSparepart"
                    android:layout_below="@+id/txtViewSparepart2"
                    android:layout_marginTop="-89dp"
                    android:ems="10"
                    android:hint="mis. 5"
                    android:inputType="number" />
                <!--<EditText-->
                <!--android:id="@+id/txtJlhSparepartProcUpdate"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignStart="@+id/textViewSparepart"-->
                <!--android:layout_below="@+id/textView12"-->
                <!--android:layout_marginTop="-142dp"-->
                <!--android:ems="10"-->
                <!--android:hint="mis. 5"-->
                <!--android:inputType="number" />-->

                <EditText
                    android:id="@+id/txtHargaSatuanSparepart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtViewSparepart"
                    android:layout_below="@+id/txtViewSparepart7"
                    android:ems="10"
                    android:hint="mis. 5"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btnAddSparepart"
                    android:layout_width="78dp"
                    android:layout_height="33dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Tambah"
                    android:textSize="12sp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <Button
                    android:id="@+id/btnAddTransaction"
                    android:layout_width="224dp"
                    android:layout_height="41dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Tambah Transaksi"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:text="Sparepart"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cardview_sparepart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>