<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/procurementImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="415dp"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtPenempatanSparepartProc"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="166dp"
                    android:gravity="center"
                    android:text="Penempatan"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/txtHargaBeliSparepartProc"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="156dp"
                    android:gravity="center"
                    android:text="Harga Beli"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/txtMerkSparepartProc"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="92dp"
                    android:gravity="center"
                    android:text="Merk"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/txtNamaSparepartProc"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="Nama"
                    android:textSize="24dp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="76dp"
                    android:elevation="4dp"
                    app:initialNumber="1"
                    app:textSize="10dp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="vertical">

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>